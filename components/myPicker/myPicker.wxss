/* components/detailsCard/detailsCard.wxss */
.card {
  background-color: white;
  width: 100%;
  /* border-radius: 5px 5px 0 0; */
  padding: 20rpx 0 100rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 650rpx;
}

@keyframes fadein{
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}

@keyframes fadeout{
  from{
    opacity: 1;
  }
  to{
    opacity: 0;
  }
}

@keyframes scrollout{
  from{
    bottom: 0rpx;
  }
  to{
    bottom: -700rpx;
  }
}

@keyframes scrollin{
  from{
    bottom: -700rpx;
  }
  to{
    bottom: 0rpx;
  }
}

.shad{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.tiptop {
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 100%;
}

.tittle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-bottom: 1rpx solid #8c8c8c93;
  padding: 0 0 10rpx 0;
  font-size: 36rpx;
}
.tittle > view{
  width: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}




